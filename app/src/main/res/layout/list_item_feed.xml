<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_feed_image"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toRightOf="@+id/list_item_feed_image"
        android:paddingLeft="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:text="Title"
        style="@style/HeaderListItemText"
        android:id="@+id/list_item_feed_title" />

    <TextView
        android:text="Details"
        style="@style/DetailListItemText"
        android:id="@+id/list_item_feed_description" />

    </LinearLayout>



</RelativeLayout>
